{
  "expo": {
    "name": "DonationsHub",
    "slug": "DonationsHub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "donationshub",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.donationshub"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.donationshub"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "publicPath": "/donations-hub/",
      "build": {
        "babel": {
          "include": ["@expo/vector-icons"]
        }
      },
      "fonts": [
        "./assets/fonts/Ionicons.ttf",
        "./assets/fonts/MaterialIcons.ttf",
        "./assets/fonts/MaterialCommunityIcons.ttf",
        {
          "asset": "./assets/fonts/MaterialIcons.ttf",
          "family": "Material Icons"
        },
        {
          "asset": "./assets/fonts/MaterialCommunityIcons.ttf",
          "family": "Material Design Icons"
        }
      ]
    },
    "plugins": [
      ["expo-router", {
        "origin": "https://yahia89.github.io"
      }],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "baseUrl": "/donations-hub"
    }
  }
}
